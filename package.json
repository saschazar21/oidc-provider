{
  "name": "oidc-provider",
  "version": "0.0.0",
  "private": true,
  "publishConfig": {
    "directory": "dist"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "yarn build && lerna bootstrap",
    "build:clean": "lerna exec rimraf dist",
    "build:js": "lerna exec yarn build",
    "build": "run-s build:*",
    "packages:link": "lerna exec yarn package:link",
    "packages:unlink": "lerna exec yarn package:unlink",
    "publish:prerelease": "lerna publish --yes --canary --contents dist --preid next",
    "publish:release": "lerna publish --yes --conventional-commits --contents dist",
    "test:clean": "yarn build:clean",
    "test:lint": "eslint --ext .js,.jsx,.ts,.tsx ./",
    "test:jest": "jest --coverage --runInBand --forceExit",
    "test": "run-s test:*"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.23",
    "@types/keygrip": "^1.0.2",
    "@types/node": "^13.13.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "babel-jest": "^27.0.2",
    "cpy-cli": "^3.1.1",
    "eslint": "^6.8.0",
    "jest": "^27.0.3",
    "jest-retries": "^1.0.1",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "typescript": "^4.3.2",
    "yargs": "^17.1.1"
  }
}
